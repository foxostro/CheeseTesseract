<max>128</max>

<material>
	<name>FlareMat</name>
	<image>data/particle/flare.png</image>
	<glow>true</glow>
</material>

<template>
	<name>Flares</name>
	<material>FlareMat</material>

	<size>
		<point>
			<x>0.0</x>
			<y>0.827</y>
		</point>

		<point>
			<x>0.5</x>
			<y>0.975</y>
		</point>

		<point>
			<x>1.0</x>
			<y>1.0</y>
		</point>
	</size>

	<color>
		<point>
			<x>0.0</x>
			<y>&color(1.0, 1.0, 1.0, 0.5)</y>
		</point>
		
		<point>
			<x>0.5</x>
			<y>&color(1.0, 1.0, 1.0, 0.1)</y>
		</point>
		
		<point>
			<x>1.0</x>
			<y>&color(1.0, 1.0, 1.0, 0.0)</y>
		</point>
	</color>

	<acceleration>
		<point>
			<x>0.0</x>
			<y>&vec(0.0, 0.0, 0.0)</y>
		</point>
	</acceleration>
	
	<initialRadialVelocity>5.0</initialRadialVelocity>
</template>

<emitter>
	<name>FlareRing</name>
	<template>Flares</template>

	<length>100.0</length>
	<looping>false</looping>
	<cycles>-1</cycles>

	<shape>
		<name>cylinder</name>
		
		<minRadius>
			<point>
				<x>0.0</x>
				<y>0.1</y>
			</point>
			<point>
				<x>1.0</x>
				<y>3.0</y>
			</point>
		</minRadius>
		
		<maxRadius>
			<point>
				<x>0.0</x>
				<y>0.2</y>
			</point>
			<point>
				<x>1.0</x>
				<y>3.1</y>
			</point>
		</maxRadius>
		
		<minZ>
			<point>
				<x>0.0</x>
				<y>-0.1</y>
			</point>
		</minZ>
		
		<maxZ>
			<point>
				<x>0.0</x>
				<y>0.1</y>
			</point>
		</maxZ>
	</shape>
	
	<position>&vec3(0.0, 0.0, 0.0)</position>

	<initialVelocity>
		<point>
			<x>0.0</x>
			<y>&vec3(0.0, 0.0, 0.0)</y>
		</point>
	</initialVelocity>
	
	<velocityVariance>
		<point>
			<x>0.0</x>
			<y>0.0</y>
		</point>
	</velocityVariance>
	
	<useDirectInitialVelocity>false</useDirectInitialVelocity>
	
	<sizemul>
		<point>
			<x>0.0</x>
			<y>0.5</y>
		</point>
	</sizemul>

	<rate>
		<point>
			<x>0.0</x>
			<y>128</y>
		</point>
	</rate>

	<lifespan>
		<point>
			<x>0.0</x>
			<y>2000.0</y>
		</point>
	</lifespan>
</emitter>
